                     HeightRequest="1"
                     VerticalOptions="FillAndExpand"
                 Spacing="0">
             <Label Text="A" 
                    x:Name="lab1"
               FontSize="50"
                HorizontalOptions="FillAndExpand"
                VerticalTextAlignment="Center"    
                HorizontalTextAlignment="Center"
                BackgroundColor="#FFD9EC"></Label>
